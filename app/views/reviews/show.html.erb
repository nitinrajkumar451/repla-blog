
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex justify-end mt-2">
      <%= link_to "Edit", edit_review_path(@review), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" if user_signed_in?%>      
    </div>
    <%= image_tag @review.film.poster if @review.film.poster.present? %>

    <div class="flex h-screen">

      <div class="w-1/2 p-8">
        <h1 class="text-2xl font-bold mb-4"><%= @review.headline %></h1>
        <p class="text-gray-700 text-lg mb-4"><%= @review.content %></p>

      </div>
    </div>

    <%= link_to 'Edit this review', edit_review_path(@review), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" if user_signed_in?%>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this review', review_path(@review), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" if user_signed_in?%>
    </div>
    <%= link_to 'Back to reviews', reviews_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
