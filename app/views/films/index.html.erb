<div class="w-full">
  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl mb-12">Films</h1>
  </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if user_signed_in?%>
    <div class="flex justify-end">
      <%= link_to 'New film', new_film_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>

    </div>
    <div class="flex justify-end mt-2">
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium"%>
    </div>
  <% end %>

  <div id="films" class="min-w-full">
    <div class="w-full flex flex-row">

      <%@films.each do |film|%>
        <div  class="flex flex-column">
          <div>
            <h2><%= link_to film.title, film%></h2>
          </div>
          <div>
            <% if film.poster.present? %>
              <h2><%= image_tag film.poster%></h2>
            <% end %>  
         </div>
        </div>
      <% end%>
    </div> 
  </div>
</div>
